{
    "extends": "@adiwajshing",
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module",
      "ecmaVersion": 2016
    },
    "ignorePatterns": ["src/LegacySocket/*", "src/Tests/*"],
    "rules": {
      "linebreak-style": "off",
      "@typescript-eslint/no-misused-promises": ["error"],
      "@typescript-eslint/no-floating-promises": ["error"]
    }
}